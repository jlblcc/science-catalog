{
  "name": "science-catalog",
  "version": "0.0.0-beta",
  "description": "LCC Science Catalog",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "build-watch": "tsc --watch",
    "build-all": "npm run-script build; npm run-script doc; cd app_src; npm run-script build; npm run-script doc; cd ..",
    "server-watch": "tsc --watch & nodemon -w ./dist --ignore 'public/*' --preserve-symlinks dist",
    "doc": "typedoc --mode file --out ./dist/public/server_doc src",
    "test": "tsc && MONGO_DB=science-catalog-test mocha --timeout 5000 dist/**/*.spec.js",
    "start": "forever start dist/index.js",
    "stop": "forever stop dist/index.js",
    "restart": "npm run-script stop; npm run-script start",
    "list": "forever list",
    "mongo-dev-up": "docker-compose -f docker-compose-dev.yml up -d",
    "mongo-dev-logs": "docker-compose -f docker-compose-dev.yml logs -f",
    "mongo-dev-start": "docker-compose -f docker-compose-dev.yml start",
    "mongo-dev-stop": "docker-compose -f docker-compose-dev.yml stop",
    "mongo-dev-down": "docker-compose -f docker-compose-dev.yml down"
  },
  "author": "paul@djcase.com",
  "license": "MIT",
  "dependencies": {
    "@mapbox/geojson-extent": "^0.3.2",
    "@types/mongodb": "^3.0.7",
    "@types/mongoose": "^5.0.7",
    "@types/node": "^9.4.7",
    "body-parser": "^1.18.2",
    "chalk": "^2.3.2",
    "cheerio": "^1.0.0-rc.2",
    "commander": "^2.15.0",
    "debug": "^3.1.0",
    "express": "^4.16.3",
    "forever": "^0.15.3",
    "kerberos": "0.0.23",
    "moment": "^2.21.0",
    "moment-timezone": "^0.5.14",
    "mongodb": "^2.2.35",
    "mongoose": "^5.0.10",
    "npm": "^5.7.1",
    "odata-resource": "^1.2.1",
    "pako": "^1.0.6",
    "request": "^2.85.0",
    "request-cookies": "^1.1.0",
    "request-promise-native": "^1.0.5",
    "truncate-html": "^1.0.0-rc.6",
    "typedoc": "^0.10.0",
    "typescript": "^2.7.2",
    "typescript-eslint-parser": "^13.0.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/mocha": "^2.2.48",
    "chai": "^4.1.2",
    "mocha": "^5.0.4"
  }
}
